<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="@string/pref_key_enable_notifications"
        android:title="@string/pref_title_notifications"
        android:defaultValue="true" />

    <ListPreference
        android:key="@string/pref_key_country_code"
        android:title="@string/pref_title_country"
        android:dialogTitle="@string/pref_desc_country"
        android:entries="@array/pref_country_entries"
        android:entryValues="@array/pref_country_values"
        android:defaultValue="@string/pref_country_code_default" />
</PreferenceScreen>